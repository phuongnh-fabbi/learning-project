<div class="nested-fields fieldset">
  <%= f.label :content, "Question" %><br />

  <div class="row">
    <div class="col-md-11">
      <%= f.text_area :content, rows: 3, class: "form-control" %>
      <%= f.hidden_field :_destroy %>
    </div>
    <div class="col-md-1">
      <%= link_to "remove", '#', class: "remove_fields" %>
    </div>
  </div>
  
  <div class="form-group field answer-box">
    <div>
      <%= f.fields_for :answers do |answer| %>
        <%= render "answer_fields", f: answer %>
      <% end %>
    </div>
    <%= link_to_add_fields(t("lesson.create.add_answer"), f, :answers) %>
  </div>

</div>

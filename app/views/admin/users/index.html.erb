<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t("user.index.title") %></h1>
      <%= form_tag imports_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag t("user.index.button_import") %>
      <% end %>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col"><%= t("user.index.table.name") %></th>
          <th scope="col"><%= t("user.index.table.email") %></th>
          <th scope="col"><%= t("user.index.button_edit") %></th>
          <th scope="col"><%= t("user.index.button_delete") %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to t("user.index.button_edit"), edit_admin_user_path(user) %></td>
            <td><%= button_to t("user.index.button_delete"), admin_user_path(user), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

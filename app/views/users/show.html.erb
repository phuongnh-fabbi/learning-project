<div class="container mt-4 mb-4 p-3 d-flex justify-content-center"> 
  <div class="card"> 
    <div class=" image d-flex flex-column justify-content-center align-items-center"> 
      <div class="box-avatar"> 

        <%= image_tag(@user.avatar || 'https://t4.ftcdn.net/jpg/02/29/75/83/240_F_229758328_7x8jwCwjtBMmC6rgFzLFhZoEpLobB6L8.jpg') %>
      </div> 
      <p class="name mt-3"><%= @user.name %></p> 
      <p class="email"><%= @user.email %></p>  
      <div class="d-flex flex-row justify-content-center align-items-center mt-3"> 
        <span class="number">1069 <span class="follow">Followers</span></span> 
      </div> 
      <div class=" d-flex mt-2"> 
        <%= link_to "Edit Profile", edit_user_path, class: "btn1 btn-dark" %>
      </div> 
    </div> 
  </div>
</div>

